function climasouth_video_block_info() 
{
	$blocks = array();
	$blocks['cs_video'] = array(
		'info' => t('Climasouth video contest block'),
		);
	return $blocks;
}


function climasouth_video_block_view($delta='') 
{
	$block = array();
	
	switch($delta) 
		{
			case 'cs_video' :
				$block['content'] = cl_video_block();
				break;
		}
	
	return $block;
}


function climasouth_video_menu() 
{
