function _climasouth_login() 
{
	$html = '<div id="climasouth_login">';	
	global $user;

	if ($user->uid) 
		{
		 $html .= '<span class="climasouth_username">'.l($user->name, 'user').'</span> - ';
		 $html .= l(t('log out'), 'user/logout');
		}
	else
		{
			$html .=  l(t('log in'), 'user');
		}

	$html.='</div>';
	return $html;
}


