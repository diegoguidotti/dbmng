					$html .= "<li>add an <a href='?act=ins&tbl=c_institution'>institution</a></li>\n";
					$html .= "<li>add a link</li>\n";
					$html .= "<li>add a <a href='?act=ins&tbl=c_project'>project</a></li>\n";
					$html .= "</ul>\n";
